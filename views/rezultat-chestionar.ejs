<h1>Rezultat chestionar</h1>
<% let corecte=0; %>
<%var obj=JSON.parse(raspunsuri); %>
<div class="formular">
<form>
    <fieldset>
        <legend>Raspunsuri</legend>
        <% for(let i=0;i<intrebari.length;i++){ %>
        <p>
            <%-i+1 %>.
            <%- intrebari[i].intrebare %>
        </p>
        <%var varFol=eval("obj.q"+[i]); %>
        <% for(let j=0;j<intrebari[i].variante.length;j++){ %>
        <% if(varFol==j ) { %>
        <label class="container"><%- intrebari[i].variante[j] %>
            <input type='radio' name="q<%- i %>" value="<%- j %>" checked disabled />
            <span class="checkmark"></span>
        </label>
        <% }else { %>
        <label class="container"><%- intrebari[i].variante[j] %>
            <input type='radio' name="q<%- i %>" value="<%- j %>" disabled />
            <span class="checkmark"></span>
        </label>
        <% } %>
        <% } %>
        <% if (varFol==intrebari[i].corect) { %>
        <p> Raspuns corect</p>
        <% corecte++ %>
        <% } else { %>
        <p>Raspunsul corect la aceasta intrebare era:
            <%- intrebari[i].variante[intrebari[i].corect] %>
        </p>
        <% } %>
        <% } %>
    </fieldset>
</form>
</div>
<h3>  <%- corecte %> intrebari corecte  din <%-intrebari.length %></h3>